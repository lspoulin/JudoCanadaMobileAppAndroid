<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="org.judocanada.judocanadamobileappandroid.MainActivity">

<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout

        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_height="30dp"
        android:layout_weight="0.075"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.95"
            android:fontFamily="sans-serif"
            android:text="@string/app_name"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:gravity="start" />

        <ImageButton
            android:id="@+id/btnUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            android:layout_weight="0.05"
            android:background="@color/colorPrimary"
            app:srcCompat="@drawable/logo"
             />

    </LinearLayout>


    <LinearLayout

        android:background="@color/colorAccentDark"
        android:orientation="horizontal"
        android:layout_height="10dp"
        android:layout_weight="0.075"
        android:layout_width="match_parent">


        <TextView
            android:id="@+id/txtTri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.20"
            android:text="@string/sort_by"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spnSort"
            android:layout_width="129dp"
            android:layout_height="23dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.70"
            android:background="@android:color/white" />

        <Switch
            android:id="@+id/switchPref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="0.30"
            android:text="@string/preferences"
            android:textColor="@android:color/white"
            android:textColorLink="?attr/colorPrimary" />

    </LinearLayout>

    <ListView
        android:id="@+id/listPosts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.80"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="20dp"
        android:layout_weight="0.075"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btnPref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.333"
            android:background="@color/colorPrimary"
            app:srcCompat="@drawable/news" />

        <ImageButton
            android:id="@+id/btnFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.333"
            app:srcCompat="@drawable/stats"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"/>

        <ImageButton
            android:id="@+id/btnSrch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.333"
            app:srcCompat="@drawable/video"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorPrimary"
        android:layout_weight="0.05"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtPref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.333"
            android:text="@string/news_feed"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtFav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.333"
            android:text="@string/stats"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.333"
            android:text="@string/video"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>

<ProgressBar
    style="?android:attr/progressBarStyleLarge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/progressBar"

    android:layout_centerInParent="true" />

</RelativeLayout>

